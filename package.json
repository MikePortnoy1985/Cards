{
  "name": "my_cards",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.12",
    "@types/react-router-dom": "^5.1.6",
    "axios": "^0.21.0",
    "eslint-config-prettier": "^7.1.0",
    "firebase": "^8.2.1",
    "formik": "^2.2.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "node-sass": "4.14",
    "normalize.css": "^8.0.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "format": "prettier --w \"src/**/*.{ts,tsx}\" && eslint --fix . --ext .ts,.tsx",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "rules": {
      "no-multi-spaces": "error",
      "jsx-quotes": [
        "warn",
        "prefer-single"
      ],
      "no-mixed-spaces-and-tabs": "error",
      "no-debugger": "warn",
      "no-alert": "warn",
      "no-console": "warn",
      "prefer-const": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
